<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.oureda.thunder.daydaypicture.registerActivity">
    <com.oureda.thunder.daydaypicture.imageSlide.MyTextView
        android:layout_marginTop="100dp"
        android:id="@+id/email_register"
        android:hint="请输入邮箱"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:labelText="用户名"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.oureda.thunder.daydaypicture.imageSlide.MyTextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/password_register"
        android:hint="请输入密码"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:labelText="密码"
        android:password="true"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.oureda.thunder.daydaypicture.imageSlide.MyTextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/account_register"
        android:hint="请输入验证码"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:labelText="用户名"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.oureda.thunder.daydaypicture.imageSlide.MyTextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/verify_register"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:labelText="验证码"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <com.oureda.thunder.daydaypicture.imageSlide.RoundButton
            android:clickable="true"
            android:id="@+id/identifying_count_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="54dp"
            app:radius="12dp"
            app:textSize="14sp"

            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:lineColor="#000000"
            app:text="发送验证码" />

    </LinearLayout>

    <TextView
        android:id="@+id/finish"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="完成"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
